<p id="notice"><%= notice %></p>

<h3>Product Groups</h3>

<table>
  <thead>
    <tr>
      <th>Product Category Name</th>
      <th>Product Group Name</th>
      <th>Active?</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_groups.each do |product_group| %>
      <tr>
        <td><%= product_group.product_category.name %></td>
        <td><%= product_group.name %></td>
        <td><%= check_box "product_group", "active", { checked: product_group.active, disabled: true } %></td>
        <td>
          <% if product_group.active? %>
            <%= button_to "Deactivate", { action: "switch" }, method: :put, params: { id: product_group.id } %>
          <% else %>
            <%= button_to "Activate", { action: "switch" }, method: :put, params: { id: product_group.id } %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_product_group_path(product_group) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Group', new_product_group_path %>