<%= form_with(model: payment_term, local: true) do |f| %>
  <% if payment_term.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(payment_term.errors.count, "error") %> prohibited this payment_term from being saved:</h3>

      <ul>
      <% payment_term.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Payment Term Name: " %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :date_days, "Date or Net Days: " %>
    <%= f.number_field :date_days, min: 0 %><br/>
  </div>

  <div class="field">
    <%= f.label :payment_option_id, "Payment Option: " %>
    <%= f.collection_select :payment_option_id, @payment_options, :id, :name, prompt: true %><br/>
  </div>

  <div class="field">
    <%= f.label :trade_credit_percent, "Trade Credit Percentage: " %>
    <%= f.text_field :trade_credit_percent %><br/>
  </div>

  <div class="field">
    <%= f.label :trade_credit_days, "Trade Credit Days: " %>
    <%= f.number_field :trade_credit_days %><br/>
  </div>

  <%= f.hidden_field :company_id, value: current_company.id %>

  <div class="field">
    <%= f.label :active, "Active?" %>
    <%= f.hidden_field :active, value: 0 %>
    <%= f.check_box :active %><br/>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

